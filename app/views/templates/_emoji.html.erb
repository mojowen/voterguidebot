<% if preview %>
  <link rel="stylesheet" type="text/css" href="<%= asset_path('emoji.css') %>">
<% else %>
  <style type="text/css"><%= to_asset_string('emoji.css') %></style>
<% end %>

<% if preview %>
  <script type="text/javascript" src="<%= asset_path('emoji.min.js') %>"></script>
<% end %>

<script type="text/javascript">
  <% unless preview %>
    <%= raw to_asset_string('emoji.min.js') %>
  <% end %>
  var emoji = new EmojiConvertor()
  emoji.img_sets.apple.path = 'https://s3-us-west-2.amazonaws.com/voterguides/img-apple-64/'
</script>
