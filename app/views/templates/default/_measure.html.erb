<div class="page measure" id="measure-<%= measure.id %>">
  <div class="header">
    <h4><%= guide.field('measures_title') %></h4>
    <h2><%= measure.title %></h2>
  </div>
  <div class="content">
    <table class="measure">
      <tbody>
        <tr>
          <td>
            <h3 style="margin-top: 6px"><%= guide.field('measures_what_it_does') %></h3>
          </td>
        </tr>
        <tr>
          <td class="desc hr">
            <p><%= measure.description %></p>
          </td>
        </tr>
        <tr class="section hr">
          <td class="hand">
            <img src="data:image/png;base64,<%= to_asset_string('up.png') %>">
          </td>
          <td class="explain">
            <h4><%= guide.field('measures_yes') %></h4>
            <p><%= measure.yes_means %></p>
          </td>
          <td class="endorse">
            <% unless measure.endorsements.against.empty? %>
              <p><%= guide.field('measures_who_says_yes') %></p>
              <ul>
                <% measure.endorsements.for.each do |endorsement| %>
                  <li>
                    <div class="before"></div>
                    <%= endorsement.endorser %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </td>
        </tr>
        <tr class="section hr">
          <td class="hand">
            <img src="data:image/png;base64,<%= to_asset_string('down.png') %>">
          </td>
          <td class="explain">
            <h4><%= guide.field('measures_no') %></h4>
            <p><%= measure.no_means %></p>
          </td>
          <td class="endorse">
            <% unless measure.endorsements.against.empty? %>
              <p><%= guide.field('measures_who_says_no') %></p>
              <ul>
                <% measure.endorsements.against.each do |endorsement| %>
                  <li>
                    <div class="before"></div>
                    <%= endorsement.endorser %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </td>
        </tr>
        <%- if measure.stance %>
          <tr>
            <td class="section recommended">
              <h3><%= guide.field('measure_recommended') %></h3>
              <span class="recommendation"><%= measure.stance == 'against' ? guide.field('measure_recommended_neg') : guide.field('measure_recommended_afirm') %></span>
              <img src="data:image/png;base64,<%= to_asset_string((measure.stance == 'against' ? 'down' : 'up')+'.png') %>">
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
